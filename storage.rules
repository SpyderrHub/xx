rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Explicitly match the avatar path structure: avatars/{uid}/{voiceId}/{fileName}
    match /avatars/{userId}/{voiceId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Explicitly match the voice sample path structure: voices/{uid}/{voiceId}/{fileName}
    match /voices/{userId}/{voiceId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Default deny for everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}