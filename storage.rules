rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper for auth
    function isSignedIn() {
      return request.auth != null;
    }

    // Authors have full access to their own storage directories.
    // Paths follow: avatars/{uid}/{voiceId}/{fileName}
    // and voices/{uid}/{voiceId}/{fileName}
    
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true; // Avatars are publicly readable for the library
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    
    match /voices/{userId}/{allPaths=**} {
      allow read: if true; // Voice samples are publicly readable for the library
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Default deny for everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}