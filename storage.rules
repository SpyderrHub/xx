rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read for avatars so they can be displayed in the library and profiles.
    // Allow write access only to the owner of the folder (matched by userId).
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow public read for voice samples so they can be played in the library.
    // Allow write access only to the owner of the folder.
    match /voices/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}