rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Users collection:
    // Only the owner can write to their own profile.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Voices collection:
    // Authors have full control (CRUD) over their own voice profiles.
    // Everyone signed in can read APPROVED voices.
    match /voices/{voiceId} {
      // Allow reading if they are the owner OR if the voice is approved
      allow read: if isSignedIn() && (
        (resource != null && resource.data.userId == request.auth.uid) ||
        (resource != null && resource.data.status == 'approved')
      );
      
      // Allow creating if they set themselves as the owner
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Allow updating and deleting if they are the owner
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}