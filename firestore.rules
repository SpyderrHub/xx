rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Users collection:
    // Any signed-in user can read profiles (needed for library attribution)
    // Only the owner can write to their own profile
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Voices collection:
    // Strictly enforced isolation. Users can only read, create, update, or delete
    // documents where the userId matches their own authenticated UID.
    match /voices/{voiceId} {
      // Allow reading only if the document belongs to the authenticated user
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Allow creation only if the userId in the new document matches the authenticated user
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Allow update and delete only if the existing document belongs to the authenticated user
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}