
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user in the system, storing their profile information and associated data.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique identifier for the user entity. This is the Firebase User ID."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the user account was created. Stored as a stringified date-time value.",
          "format": "date-time"
        },
        "plan": {
          "type": "string",
          "description": "The user's current pricing plan (e.g., 'free', 'basic', 'premium')."
        },
        "credits": {
          "type": "number",
          "description": "The number of credits the user has available for using AI services."
        },
        "role": {
          "type": "string",
          "description": "The user's role in the system (e.g., 'user', 'admin'). 'admin' refers to Voice Authors."
        },
        "subscriptionId": {
          "type": "string",
          "description": "The user's Razorpay subscription ID."
        },
        "paymentStatus": {
          "type": "string",
          "description": "The status of the user's subscription (e.g., 'active', 'cancelled', 'expired')."
        },
        "currentPeriodStart": {
          "type": "string",
          "format": "date-time",
          "description": "Start of the current billing cycle."
        },
        "currentPeriodEnd": {
          "type": "string",
          "format": "date-time",
          "description": "End of the current billing cycle."
        },
        "billingCycle": {
          "type": "string",
          "description": "The billing cycle of the subscription ('monthly' or 'yearly')."
        }
      },
      "required": [
        "uid",
        "name",
        "email",
        "createdAt",
        "plan",
        "credits",
        "role"
      ]
    },
    "Voice": {
      "title": "Voice",
      "type": "object",
      "description": "Represents a voice sample uploaded by an author.",
      "properties": {
        "userId": { "type": "string" },
        "voiceName": { "type": "string" },
        "avatarUrl": { "type": "string" },
        "description": { "type": "string" },
        "language": { "type": "string" },
        "gender": { "type": "string" },
        "accent": { "type": "string" },
        "style": { "type": "string" },
        "ageRange": { "type": "string" },
        "audioUrl": { "type": "string" },
        "audioDuration": { "type": "number" },
        "audioFormat": { "type": "string" },
        "status": { "type": "string", "enum": ["pending_review", "approved", "rejected"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "voiceName", "language", "gender", "status", "createdAt", "description"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          }
        }
      },
      {
        "path": "/voices/{voiceId}",
        "definition": {
          "entityName": "Voice",
          "schema": {
            "$ref": "#/backend/entities/Voice"
          },
          "description": "Stores voice samples submitted by authors for review."
        }
      }
    ]
  }
}
